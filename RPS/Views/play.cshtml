<html>
  <head>
    <link href="/Content/CSS/style.css" rel="stylesheet" type="text/CSS">
  </head>
  <body>

    <form id="gameForm" action="/result" method="post">
      <label for="choice1">Player 1 choice:</label>
      <input name="choice1" id="player1choice" type="text">
      <label for="choice2">Player 2 choice:</label>
      <input name="choice2" id="player2choice" type="text">
      <button type="submit">Shoot!</button>
    </form>

    <div>
    <h1 id="countdown" type="text"></h1>
    </div>

    <div id="player1">
      <div>
        <h3>PLAYER 1</h3>
      </div>
      <div>
        <span class="arrowkey">A</span><span class="arrowkey">S</span><span class="arrowkey">D</span>
      </div>
      <div>
        <span class="RPS">ROCK</span><span class="RPS">PAPER</span><span class="RPS">SCISSORS</span>
      </div>
    </div>

    <div id="player2">
      <div>
        <h3>PLAYER 2</h3>
      </div>
      <div>
        <span class="arrowkey">&larr;</span><span class="arrowkey">&rarr;</span><span class="arrowkey">&darr;</span>
      </div>
      <div>
        <span class="RPS">ROCK</span><span class="RPS">PAPER</span><span class="RPS">SCISSORS</span>
      </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>
    <script src="/Content/JS/scripts.js"></script>
  </body>
</html>
